<!-- This Aleph One/SDL them is an imitation of Marathon Infinity's menu -->
<!-- The buttons are clearly stolen from Bungie's menu -->
<!-- Ian Pitcher <ipitcher@technician.org> -->

<marathon>
<theme>

<!-- Dialog frame -->
<frame top="12" bottom="12" left="12" right="12">
  <image index="0" file="frame_tl.bmp" scale="false"/>
  <image index="1" file="frame_t.bmp" scale="false"/>
  <image index="2" file="frame_tr.bmp" scale="false"/>
  <image index="3" file="frame_l.bmp" scale="false"/>
  <image index="4" file="frame_r.bmp" scale="false"/>
  <image index="5" file="frame_bl.bmp" scale="false"/>
  <image index="6" file="frame_b.bmp" scale="false"/>
  <image index="7" file="frame_br.bmp" scale="false"/>
</frame>

<!-- Dialog background -->
<background>
  <color red="0.145" green="0.145" blue="0.145"/>
</background>

<!-- Dialog title -->
<title>
<font file="DejaVuLGCSansCondensed-Bold.ttf" size="24"/>
  <color red="0.85" green="0.85" blue="0.80"/>
</title>

<!-- Spacer -->
<spacer height="8"/>

<!-- Button -->
<button top="5" left="16" right="16" height="32">
  <font id="128" size="14" style="0"/>
  <color index="0" red="0.5" green="0.5" blue="0.5"/>
  <color index="1" red="0.95" green="0.70" blue="0.28"/>
  <image index="0" file="button_l.bmp" scale="false"/>
  <image index="1" file="button_c.bmp" scale="false"/>
  <image index="2" file="button_r.bmp" scale="false"/>
</button>

<!-- Label -->
<label>
  <font file="DejaVuLGCSansCondensed-Bold.ttf" italic_file="DejaVuLGCSansCondensed-BoldOblique.ttf" size="12" style="0"/>
  <color index="0" red="0.875" green="0.65" blue="0.65"/>
  <color index="1" red="0.75" green="0.875" blue="0.65"/>
</label>

<!-- Item -->
<item space="10">
  <font file="DejaVuLGCSansCondensed-Bold.ttf" italic_file="DejaVuLGCSansCondensed-BoldOblique.ttf" size="12" style="0"/>
  <color index="0" red="0.75" green="0.25" blue="0.25"/>
  <color index="1" red="0.25" green="0.75" blue="0.25"/>
</item>

<!-- Text message -->
<message> 
  <font file="DejaVuLGCSansCondensed-Bold.ttf" italic_file="DejaVuLGCSansCondensed-BoldOblique.ttf" size="12" style="0"/>
  <color red="0.875" green="0.875" blue="0.75"/>
</message>

<!-- Text entry widget -->
<text_entry>
  <font file="DejaVuLGCSansCondensed-Bold.ttf" italic_file="DejaVuLGCSansCondensed-BoldOblique.ttf" size="12" style="0"/>
  <color index="0" red="1" green="0.875" blue="0.875"/>
  <color index="1" red="1" green="1" blue="1"/>
  <color index="2" red="0.875" green="1" blue="0.875"/>
</text_entry>

<text_box>
  <font file="DejaVuLGCSansCondensed-Bold.ttf" italic_file="DejaVuLGCSansCondensed-BoldOblique.ttf" size="12" style="0"/>
</text_box>

<!-- List selection widget -->
<list top="10" bottom="12" left="10" right="32">
  <image index="0" file="list_tl.bmp" scale="false"/>
  <image index="1" file="list_t.bmp" scale="false"/>
  <image index="2" file="list_tr.bmp" scale="false"/>
  <image index="3" file="list_l.bmp" scale="false"/>
  <image index="4" file="list_r.bmp" scale="false"/>
  <image index="5" file="list_bl.bmp" scale="false"/>
  <image index="6" file="list_b.bmp" scale="false"/>
  <image index="7" file="list_br.bmp" scale="false"/>
  <trough top="6" right="16" bottom="6" width="22"/>
  <thumb>
    <image index="0" file="thumb_t.bmp" scale="false"/>
    <image index="1" file="thumb_tc.bmp" scale="false"/>
    <image index="2" file="thumb_c.bmp" scale="false"/>
    <image index="3" file="thumb_bc.bmp" scale="false"/>
    <image index="4" file="thumb_b.bmp" scale="false"/>
  </thumb>
</list>

<!-- Slider -->
<slider top="3" left="1" right="1">
  <image index="0" file="slider_l.bmp" scale="false"/>
  <image index="1" file="slider_c.bmp" scale="false"/>
  <image index="2" file="slider_r.bmp" scale="false"/>
  <image index="3" file="slider.bmp" scale="false"/>
</slider>

</theme>
</marathon>
